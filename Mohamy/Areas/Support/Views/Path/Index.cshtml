@model IEnumerable<Paths>

@{
    ViewData["Title"] = "ادارة المسارات";
}

<form>
    <button type="submit" class="btn btn-primary p-2" asp-action="Create">Create New</button>
</form>
<table id="example1" class="table">
    <thead>
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <form class="p-2">
                        <button type="submit" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                    </form>
                </td>
                <td>
                    <form class="p-2" asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" style="    border: none;">
                            <img src="~/asset/Delete.png" alt="icon" class="icon" />
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
