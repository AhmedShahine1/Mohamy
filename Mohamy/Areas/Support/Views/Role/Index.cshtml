@model IEnumerable<Mohamy.Core.Entity.ApplicationData.ApplicationRole>

@{
    ViewData["Title"] = "ادارة الادوار";
}

<form>
    <button type="submit" class="btn btn-primary p-2" asp-action="Create">Create New</button>
</form>
<table id="example1" class="table">
    <thead>
        <tr style="--bs-table-bg:#f7f7f7ff;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NormalizedName)
            </th>
            <th>Edit</th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalizedName)
            </td>
            <td>
                <form class="p-2">
                    <button type="submit" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                </form>
            </td>
            <td>
                <form class="p-2" asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" style="    border: none;">
                            <img src="~/asset/Delete.png" alt="icon" class="icon" />
                        </button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
