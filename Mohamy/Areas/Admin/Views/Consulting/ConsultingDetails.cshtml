@model ConsultingDTO

<h2>Consulting Details</h2>

<div>
    <h4>Consulting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order Number
        </dt>
        <dd class="col-sm-10">
            @Model.OrderNumber
        </dd>
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.Customer?.FullName
        </dd>
        <dt class="col-sm-2">
            Lawyer
        </dt>
        <dd class="col-sm-10">
            @Model.Lawyer?.FullName
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.PriceService
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.StatusConsulting
        </dd>
        <dt class="col-sm-2">
            Files
        </dt>
        <dd class="col-sm-10">
            @if (Model.FilesUrl != null && Model.FilesUrl.Any())
            {
                <ul>
                    @foreach (var fileUrl in Model.FilesUrl)
                    {
                        <li><a href="@fileUrl" target="_blank">View File</a></li>
                    }
                </ul>
            }
            else
            {
                <p>No files uploaded.</p>
            }
        </dd>
    </dl>
</div>
