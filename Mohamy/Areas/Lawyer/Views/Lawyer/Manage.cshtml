@model ManageLawyerViewModel
<!-- /.col -->
<div class="col-md">
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills" style="justify-content: flex-start; flex-direction:row;">
                <li class="nav-item"><a class="nav-link active" href="#Experience" data-toggle="tab">خبرات</a></li>
                <li class="nav-item"><a class="nav-link" href="#Personal" data-toggle="tab">معلومات شخصية</a></li>
                <li class="nav-item"><a class="nav-link" href="#Qualification" data-toggle="tab">مؤهلات</a></li>
            </ul>
        </div><!-- /.card-header -->
        <div class="card-body">
            <div class="tab-content">
                <div class="active tab-pane" id="Experience">
                    <form asp-action="Manage" method="post">
                        <div class="form-group">
                            <label>اختار خبراتك:</label>
                            <div class="row">
                                @foreach (var subConsulting in Model.Experience.SubConsultings)
                                {
                                    <div class="col-md-6">
                                        <div class="form-check form-check-reverse">
                                            <input type="checkbox" class="form-check-input" name="subConsultingIds" value="@subConsulting.Value" @(subConsulting.Selected ? "checked" : "") />
                                            <label class="form-check-label ml-2" style="padding-right: 20px;">@subConsulting.Text</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <input type="hidden" asp-for="Experience.LaywerId" />
                        <button type="submit" class="btn btn-primary">حفظ</button>
                    </form>
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="Personal">
                    <form asp-action="PersonalUpdate" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Full Name Field -->
                        <div class="input-group mb-3">
                            <label asp-for="personalUpdate.FullName" class="form-label">الاسم الكامل</label>
                            <input asp-for="personalUpdate.FullName" class="form-control" placeholder="الاسم الكامل" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="personalUpdate.FullName" class="text-danger"></span>

                        <!-- Phone Number Field -->
                        <div class="input-group mb-3">
                            <label asp-for="personalUpdate.PhoneNumber" class="form-label">رقم الهاتف</label>
                            <input asp-for="personalUpdate.PhoneNumber" class="form-control" placeholder="رقم الهاتف" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-phone"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="personalUpdate.PhoneNumber" class="text-danger"></span>

                        <!-- Image Upload Field -->
                        <div class="input-group mb-3">
                            <label asp-for="personalUpdate.ImageProfile" class="form-label">تحميل الصورة</label>
                            <input asp-for="personalUpdate.ImageProfile" type="file" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-upload"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="personalUpdate.ImageProfile" class="text-danger"></span>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary">حفظ</button>
                    </form>
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="Qualification">
                    <form asp-action="QualificationUpdate" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Description Field -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="qualificationUser_Description">الوصف</label>
                                    <textarea asp-for="qualificationUser.Description" class="form-control" rows="3"></textarea>
                                </div>
                                <span asp-validation-for="qualificationUser.Description" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Years of Experience Field -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="qualificationUser_YearsExperience">سنوات الخبرة</label>
                                    <input asp-for="qualificationUser.YearsExperience" class="form-control" placeholder="أدخل عدد سنوات الخبرة" />
                                </div>
                                <span asp-validation-for="qualificationUser.YearsExperience" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- City Field -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="qualificationUser_City">المدينة</label>
                                    <input asp-for="qualificationUser.City" class="form-control" placeholder="أدخل المدينة" />
                                </div>
                                <span asp-validation-for="qualificationUser.City" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Academic Specialization Field -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="qualificationUser_AcademicSpecialization">التخصص الأكاديمي</label>
                                    <input asp-for="qualificationUser.AcademicSpecialization" class="form-control" placeholder="أدخل التخصص الأكاديمي" />
                                </div>
                                <span asp-validation-for="qualificationUser.AcademicSpecialization" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Graduation Certificate Upload Field -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="qualificationUser_graduationCertificate"> شهادة التخرج</label>
                                    <input asp-for="qualificationUser.graduationCertificate" class="form-control" />
                                </div>
                                <span asp-validation-for="qualificationUser.graduationCertificate" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Lawyer License Upload Field -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="qualificationUser_lawyerLicense"> رخصه المحاماه </label>
                                    <input asp-for="qualificationUser.lawyerLicense" class="form-control" />
                                </div>
                                <span asp-validation-for="qualificationUser.lawyerLicense" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Consulting Cost Field -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="qualificationUser_CostConsulting">تكلفة الاستشارة</label>
                                    <input asp-for="qualificationUser.CostConsulting" class="form-control" placeholder="أدخل تكلفة الاستشارة" />
                                </div>
                                <span asp-validation-for="qualificationUser.CostConsulting" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Education Field -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="qualificationUser_Education">التعليم</label>
                                    <input asp-for="qualificationUser.Education" class="form-control" placeholder="أدخل التعليم" />
                                </div>
                                <span asp-validation-for="qualificationUser.Education" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">حفظ</button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
        </div><!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<!-- /.col -->