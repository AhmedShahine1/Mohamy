@model BankDetails

<div class="container mt-5">
    <h2 class="text-center">بيانات الحساب البنكي</h2>

    <form asp-action="BankDetail" method="post" class="mt-4">
        <div class="form-group row">
            <label asp-for="BankName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="BankName" class="form-control" placeholder="ادخل اسم البنك" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="AccountNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="AccountNumber" class="form-control" placeholder="ادخل رقم الحساب" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="IBAN" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="IBAN" class="form-control" placeholder="ادخل رقم الآيبان" />
                <span asp-validation-for="IBAN" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BeneficiaryName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <input asp-for="BeneficiaryName" class="form-control" placeholder="ادخل الاسم المسجل في البنك" />
                <span asp-validation-for="BeneficiaryName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">حفظ</button>
            </div>
        </div>
    </form>
</div>
