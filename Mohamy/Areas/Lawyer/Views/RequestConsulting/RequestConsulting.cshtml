@model RequestConsultingDTO

<h2>Add Consulting Request</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="ConsultingId">Consulting ID</label>
        <input type="text" class="form-control" id="ConsultingId" name="ConsultingId" value="@Model.ConsultingId" />
    </div>
    <div class="form-group">
        <label for="LawyerId">Lawyer ID</label>
        <input type="text" class="form-control" id="LawyerId" name="LawyerId" value="@Model.LawyerId" />
    </div>
    <div class="form-group">
        <label for="Status">Status</label>
        <select class="form-control" id="Status" name="statusRequestConsulting">
            <option value="Waiting">Waiting</option>
            <option value="Approved">Approved</option>
            <option value="Cancel">Cancel</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add Request</button>
</form>
