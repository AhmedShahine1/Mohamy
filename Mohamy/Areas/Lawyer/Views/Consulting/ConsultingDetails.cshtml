@model ConsultingDTO

<h2>تفاصيل الاستشارة</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            رقم الطلب
        </dt>
        <dd class="col-sm-10">
            @Model.OrderNumber
        </dd>
        <dt class="col-sm-2">
            اسم العميل
        </dt>
        <dd class="col-sm-10">
            @Model.Customer?.FullName
        </dd>
        <dt class="col-sm-2">
            اسم المحامي
        </dt>
        <dd class="col-sm-10">
            @Model.Lawyer?.FullName
        </dd>
        <dt class="col-sm-2">
            وصف الاستشارة
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            سعر الاستشارة
        </dt>
        <dd class="col-sm-10">
            @Model.PriceService
        </dd>
        <dt class="col-sm-2">
            حاله الاستشارة
        </dt>
        <dd class="col-sm-10">
            @Model.StatusConsulting
        </dd>
        <dt class="col-sm-2">
            الملفات
        </dt>
        <dd class="col-sm-10">
            @if (Model.FilesUrl != null && Model.FilesUrl.Any())
            {
                <ul>
                    @foreach (var fileUrl in Model.FilesUrl)
                    {
                        <li><a href="@fileUrl" target="_blank">View File</a></li>
                    }
                </ul>
            }
            else
            {
                <p>لا يوجد ملفات.</p>
            }
        </dd>
    </dl>
</div>